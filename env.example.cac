# FFMA Dashboard Environment Variables
# Copy this file to .env and fill in your actual values

# =======================
# REQUIRED VARIABLES
# =======================

# Supabase Configuration
SUPABASE_URL=https:
SUPABASE_ANON_KEY=

# =======================
# OPTIONAL VARIABLES
# =======================

# Hugging Face API (for enhanced sentiment analysis)
HUGGINGFACE_API_KEY=

# JWT Secret (for authentication if implemented)
JWT_SECRET=

# API Base URL (for development)
API_BASE_URL=http://localhost:3000

# Database Configuration (if using custom database)
DATABASE_URL=postgresql://user:password@localhost:5432/ffma_db

# Environment
NODE_ENV=development

# =======================
# ADVANCED OPTIONS
# =======================

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_MS=60000

# Performance Monitoring
ENABLE_PERFORMANCE_LOGGING=true
LOG_LEVEL=info

# Cache Settings
CACHE_TTL_SECONDS=300
ENABLE_REDIS_CACHE=false
REDIS_URL=redis://localhost:6379

# External APIs
OPENAI_API_KEY=your-openai-api-key-if-needed
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# =======================
# DEPLOYMENT NOTES
# =======================
# For Vercel deployment, set these environment variables in:
# Vercel Dashboard > Your Project > Settings > Environment Variables
#
# For production, make sure to:
# 1. Use strong, unique values for all secrets
# 2. Enable RLS (Row Level Security) in Supabase
# 3. Configure proper CORS settings
# 4. Set up monitoring and alerts
# =======================
